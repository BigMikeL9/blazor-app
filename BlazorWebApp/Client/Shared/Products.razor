@page "/products"
@inject IJSRuntime JSRuntime

<h3>Products</h3>


<ol>
    @foreach (var product in ProductsList)
    {
        <li>
            <article>
                <div>
                    <a href="#">
                        <img src="@product.ImageUrl" alt="@product.Title" />
                    </a>
                </div>

            <p>Title: @product.Title</p>
            <p>Description: @product.Description</p>
            <p>Price: $@product.Price</p>
            </article>
        </li>
    }

</ol>


